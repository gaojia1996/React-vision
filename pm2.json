{
  "apps": [{
    "name": "react-vision",
    "script": "http-server",
    "args": "./build -p 3000",
    "exec_mode": "fork",
    "instances": 1,
    "autorestart": true,
    "min_uptime": "30s",
    "node_args": "--max-old-space-size=65500",
    "out_file": "/tmp/react-web.log",
    "error_file": "/tmp/react-web.log",
    "combine_logs": true,
    "env": {
      "NODE_ENV": "development"
    },
    "env_production": {
      "NODE_ENV": "production"
    }
  }]
}
